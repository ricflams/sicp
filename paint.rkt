#lang racket
(#%require sicp-pict)

(#%provide paint-to-png)
(define (paint-to-png painter filename)
  (define snip   (paint painter))
  (define bitmap (send snip get-bitmap))
  (send bitmap save-file filename 'png)
  (display "Saved to file ")
  (display filename)
  (newline))

